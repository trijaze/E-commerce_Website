<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">
  <persistence-unit name="ecommercePU">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

    <!-- KHAI BÁO ENTITY -->
    <class>vn.bachhoa.products.model.Product</class>
    <class>vn.bachhoa.products.model.ProductImage</class>
    <class>vn.bachhoa.products.model.ProductVariant</class>

    <properties>
      <!-- Hibernate -->
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
      <property name="hibernate.hbm2ddl.auto" value="validate"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>

      <!-- DÙNG HikariCP qua Hibernate (không dùng javax.persistence.jdbc.*) -->
      <property name="hibernate.connection.provider_class"
                value="org.hibernate.hikaricp.internal.HikariCPConnectionProvider"/>

      <!-- Khai báo DataSource cho Hikari -->
      <property name="hibernate.hikari.dataSourceClassName"
                value="com.mysql.cj.jdbc.MysqlDataSource"/>

      <!-- Thuộc tính của MysqlDataSource (KHÔNG dùng driver/url ở javax.persistence.*) -->
      <property name="hibernate.hikari.dataSource.serverName" value="localhost"/>
      <property name="hibernate.hikari.dataSource.portNumber" value="3306"/>
      <property name="hibernate.hikari.dataSource.databaseName" value="bachhoa"/>
      <property name="hibernate.hikari.dataSource.user" value="ecom"/>
      <property name="hibernate.hikari.dataSource.password" value="StrongPass!23"/>

      <!-- Các option MySQL cần thiết -->
      <property name="hibernate.hikari.dataSource.useSSL" value="false"/>
      <property name="hibernate.hikari.dataSource.allowPublicKeyRetrieval" value="true"/>
      <property name="hibernate.hikari.dataSource.serverTimezone" value="UTC"/>
      <property name="hibernate.hikari.maximumPoolSize" value="10"/>
      <!-- tùy chọn:
      <property name="hibernate.hikari.minimumIdle" value="2"/>
      <property name="hibernate.hikari.poolName" value="BachHoaPool"/>
      -->
    </properties>
  </persistence-unit>
</persistence>
