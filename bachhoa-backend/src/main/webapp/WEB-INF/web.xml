<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="false">

    <display-name>bachhoa-backend</display-name>

    <!-- ==================================================== -->
    <!-- CẤU HÌNH CÁC BỘ LỌC (FILTERS) - THỨ TỰ RẤT QUAN TRỌNG -->
    <!-- ==================================================== -->

    <!-- Filter 1: Luôn chạy đầu tiên để đảm bảo mọi request/response đều là UTF-8 -->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>vn.bachhoa.filter.CharacterEncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Filter 2: Xử lý CORS, phải chạy trước các filter bảo mật -->
    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>vn.bachhoa.filter.CorsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Filter 3: Bảo mật, chỉ chạy cho các đường dẫn được bảo vệ -->
    <filter>
        <filter-name>JwtFilter</filter-name>
        <filter-class>vn.bachhoa.filter.JwtFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>JwtFilter</filter-name>
        <url-pattern>/api/secure/*</url-pattern>
    </filter-mapping>

    <!-- ==================================================== -->
    <!-- CẤU HÌNH CÁC SERVLET                                   -->
    <!-- ==================================================== -->
    
    <!-- Lưu ý: Các Servlet khác được định nghĩa bằng Annotation (@WebServlet) -->
    <!-- nên không cần khai báo ở đây, trừ khi bạn muốn ghi đè. -->

    <!-- Promotion APIs -->
    <servlet>
        <servlet-name>PromotionServlet</servlet-name>
        <servlet-class>vn.bachhoa.controller.PromotionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PromotionServlet</servlet-name>
        <url-pattern>/api/promotions/*</url-pattern>
    </servlet-mapping>

    <!-- Admin Product APIs -->
    <servlet>
        <servlet-name>AdminProductServlet</servlet-name>
        <servlet-class>vn.bachhoa.controller.AdminProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminProductServlet</servlet-name>
        <url-pattern>/api/secure/admin/products/*</url-pattern>
    </servlet-mapping>

</web-app>
